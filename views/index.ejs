<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<header>
    <div class="userFunction">
        <% if (!user.userId) { %>
        <input type="button" value="로그인" id="signin" onclick="location.href='/signin'">
        <input type="button" value="회원가입" id="signup" onclick="location.href='/signUp'">
        <% } else { %>
        <%= user.nickname %>님(<%= user.userId %>)
        <input type="button" value="로그아웃" id="signout" onclick="location.href='/signout'">
        <input type="button" value="물품등록" id="writeproduct" onclick="location.href='/writeproduct'">
        <% } %>
    </div>
    <div style="clear: both;">
        <center>
            <a href="/"><img src="/images/shopping-cart.png" height="150px"></a>
        </center>
    </div>
</header>
<article>
    <div id="columns">
        <% products.forEach(function (obj) { %>
        <figure onclick="location.href=('<%= '/' + obj.name + '/' + obj.pid %>')">
            <img src="<%= obj.image %>">
            <figcaption>
                <p id="p_title"><%= obj.title %></p>
                <p id="p_price"><%= obj.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %>원</p> <!-- Again... -->
                <div style="margin: 0; text-align: center">
                    <%= obj.nickname %>(<%= obj.id %>)<br>
                    <%= obj.regdate %>
                </div>
            </figcaption>
        </figure>
        <% }); %>
    </div>
</article>
</body>
</html>
